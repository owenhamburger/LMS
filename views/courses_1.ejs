          <div class="sideBox1 reservation">
            <a href="./reserveTutor.html">
              <P>Reserve Tutor</P>
            </a>
          </div>
        </div>
        <section class="middleR">
          <section class="title">
            <div class="titleContainer">
              <h2>
                <a href="./">OVERVIEW </a> / <a href="/"> My Courses </a> /
              </h2>
            </div>
          </section>
          <section class="mainContainer">
            <div class="courseList">
              <% if (userCourses) { %>
              <% userCourses.forEach(course => { %>
              <div class="card bg-light mb-3" style="max-width: 18rem;">
                <div class="card-header" style="background-color: #2f7996;"></div>
                <div class="card-body">
                  <h5 class="card-title"><%= course.courseName %></h5>
                  <p class="card-text">Notifications: 1</p>
                  <button type="button" class="btn btn-dark">View Course</button>
                </div>
              </div>
              <% })} %>
            </div>

          </section>
        </section>
      </section>
    </main>

    <footer class="footer">
      <section class="whitesection">
