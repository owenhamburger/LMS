<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <title>LMS</title>
    <link rel="stylesheet" href="./style.css">
  </head>
  <body class="home">
  <div id="wrap">
          <header class="header">
                <div class="top">
                    <div class="topL">
                        <p>LMS</p>
                    </div>
                    <div class="topR"></div>
                </div>
            </header>

            <main class="main">
              <section class="middleContainer">
                <div class="sideBar"></div>
                <section class="middleR">
                    <section class="title">
                        <div class="titleContainer">
                            <h2>STUDENT LOGIN</h2>
                        </div> 
                    </section>

                    <% if(messages.accountCreated) { %>
                        <li><%= messages.accountCreated %></li>
                        <% } %>

                    <% if(messages.logOutSuccess) { %>
                        <li><%= messages.logOutSuccess %></li>
                        <% } %>

                    <% if(messages.error) { %>
                        <li><%= messages.error %></li>
                        <% } %>

                        <section class="mainContainer">
                            <div class="userEntry">
                                <div class="userEntryBox">
                                    <p>STUDENT LOGIN</p>
                                    <form action="/login" method="POST">
                                        <div>
                                            <p>Username</p>
                                            <input type="text" id="username" name="username" placeholder="Enter your username" required>
                                        </div>                
                                        <div>
                                            <p>Password</p>
                                            <input type="password" id="password" name="password" placeholder="Enter your password" required>
                                        </div>
                                        <div class="saveBottonP">
                                            <p><a href="./main/main.html"><button class="submitButton" type="submit">SIGN IN</button></a></p>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </section>
                </section>
            </main>

            <footer class="footer">
                <section class="whitesection">
                    <div class="whiteContainer">
                        <div class="schoolName">
                            <p>ARKANSAS STATE UNIVERSITY JAVA APPLICATION DEVELOPMENT</p>
                        </div>
                        <div class="address">
                            <p>Jonesboro, Arkansas | (870)000-0000</p>
                        </div>
                    </div>
                </section>
            </footer>
    </div> <!--wrap-->
  </body>
</html>
