    <main class="main">
      <section class="middleContainer">
        <div class="sideBar"></div>
        <section class="middleR">
          <section class="title">
            <div class="titleContainer">
              <h2>STUDENT LOGIN</h2>
            </div>
          </section>
          <section class="mainContainer">
            <div class="userEntry">
              <div class="userEntryBox">
                <% if(messages.accountCreated) { %>
                <div class="alert alert-success" role="alert">
                  <%= messages.accountCreated %>
                </div>
                <% } %>

                <% if(messages.logOutSuccess) { %>
                <div class="alert alert-success" role="alert">
                  <%= messages.logOutSuccess %>
                </div>
                <% } %>

                <% if(messages.error) { %>
                <div class="alert alert-danger" role="alert">
                  <%= messages.error %>
                </div>
                <% } %>
                <form action="/login" method="POST">
                  <div class="mb-3">
                    <label for="formGroupExampleInput" class="form-label">Username</label>
                    <input type="text" class="form-control" name="username" aria-label="Username" aria-describedby="basic-addon1">
                  </div>
                  <div class="mb-3">
                    <label for="inputPassword3" class="form-label">Password</label>
                    <input type="password" name="password" class="form-control" id="inputPassword3">
                  </div>
                  <div class="mb-3">
                    <a href="./Public/index">
                      <button class="btn btn-primary" type="submit">SIGN IN</button>
                    </a>
                  </div>
                </form>
              </div>
            </div>
          </section>
        </section>
    </main>

