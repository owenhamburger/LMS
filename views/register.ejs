<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="./Public/style.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
  <title>Register</title>
  <script src="./Public/browserJS.js" defer></script>
</head>

<body class="home">
  <div id="wrap">
    <header class="header">
      <div class="top">
        <div class="topL">
          <p>LMS</p>
        </div>
        <div class="topR"></div>
      </div>
    </header>

    <main class="main">
      <section class="middleContainer">
        <div class="sideBar"></div>
        <section class="middleR">
          <section class="title">
            <div class="titleContainer">
              <h2>Register</h2>
            </div>
          </section>
          <div>
            <a href="/login">Already registered? Login here</a>
          </div>


          <section class="mainContainer">
            <div class="userEntryRegister">

              <div class="userEntryBoxRegister">
                <% if(messages.usernameConflict) { %>
                <div class="alert alert-danger" role="alert">
                  <%= messages.usernameConflict %>
                </div>
                <% } %>

                <% if(messages.emailConflict) { %>
                <div class="alert alert-danger" role="alert">
                  <%= messages.emailConflict %>
                </div>
                <% } %>

                <% if(typeof messages.validationErrors != 'undefined') {%>
                <% for(let i = 0; i < messages.validationErrors.length; i++) { %>
                <div class="alert alert-danger" role="alert">
                  <%=messages.validationErrors[i]%>
                </div>
                <% } %> <% } %>
                <form action="/register" method="POST">
                  <div class="mb-3">
                    <label for="formGroupExampleInput" class="form-label">First Name</label>
                    <input type="text" class="form-control" name="firstName" id="formGroupExampleInput">
                  </div>
                  <div class="mb-3">
                    <label for="formGroupExampleInput2" class="form-label">Last Name</label>
                    <input type="text" class="form-control" name="lastName" id="formGroupExampleInput2">
                  </div>
                  <div class="mb-3">
                    <label for="formGroupExampleInput" class="form-label">Email</label>
                    <input type="text" class="form-control" name="email" aria-label="Email" aria-describedby="basic-addon2">
                  </div>
                  <div class="mb-3">
                    <label for="formGroupExampleInput" class="form-label">Username</label>
                    <input type="text" class="form-control" name="username" aria-label="Username" aria-describedby="basic-addon1">
                  </div>
                  <div class="mb-3">
                    <label for="inputPassword3" class="form-label">Password</label>
                    <input type="password" class="form-control" name="password" id="inputPassword3">
                    <div id="passwordHelpBlock" class="form-text">
                      Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji.
                    </div>
                  </div>
                  <div class="mb-3">
                    <label for="inputPassword3" class="form-label">Confirm Password</label>
                    <input type="password" class="form-control" name="passwordConfirmation" id="inputPassword3">
                  </div>

                  <div class="mb-3" id="registerClasses">
                    <label for="validationCustom04" class="form-label">Register Your Class</label>
                    <button type="button" id="addClassBtn" class="w3-button w3-circle w3-black">+</button>
                    <select name="class1" class="form-select" id="validationCustom04" required>
                      <option selected>Choose...</option>
                      <% allCourses.forEach(course => { %>
                      <option value=<%=course.CRN %>> <%= course.courseName %> </option>
                      <% }) %>
                    </select>
                  </div>

                  <div class="mb-3">
                    <a href="/login">
                      <button class="btn btn-primary" type="submit">Register</button>
                    </a>
                  </div>
                </form>
              </div>
            </div>
          </section>
        </section>
    </main>
  </div>
</body>

</html>